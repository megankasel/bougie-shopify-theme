<script>
  document.addEventListener("DOMContentLoaded", function() {
    const arrivals = document.querySelector(".arrivals-products");
    const moreRight = document.getElementById("moreRight");
    const moreLeft = document.getElementById("moreLeft");
    const scrollAmount = arrivals.clientWidth / 2; 

    moreRight.addEventListener("click", function() {
        arrivals.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });

    moreLeft.addEventListener("click", function() {
        arrivals.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    arrivals.addEventListener("scroll", function() {
        moreLeft.style.display = arrivals.scrollLeft > 0 ? "block" : "none";
        moreRight.style.display = arrivals.scrollLeft + arrivals.clientWidth >= arrivals.scrollWidth ? "none" : "block";
    });
});

</script>



