{% stylesheet %}
  /* ARRIVALS SECTION STYLES */
  .arrivals-section {
    background-color: #D4AF37;
    height: 514px; /*1895 x 514*/
    width: 100vw;
    overflow: auto;
    position: relative;
  }

  .arrivals-marquee {
    font-size: 36px;
    font-weight: bold;
    color: white;
    white-space: nowrap;
    overflow: hidden;
    display: flex;
    position: absolute;
    top: 10px;
    width: 100%;
  }

  .arrivals-marquee-content {
    display: flex;
    animation: marquee-scroll 200s linear infinite;
  }

  .arrivals-marquee-content span {
    padding-right: 10px; /* Space between each repetition */
  }

  @keyframes marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .arrivals-products {
    display: flex;
    gap: 10px;
    overflow-x: hidden;  /* Force scrollbar */
    overflow-y: hidden;
    padding: 15px 0;
    scrollbar-width: thin;
    scrollbar-color: #7D998D transparent; 
    width: 100%;
    /*max-width: 1200px;*/
    
    scroll-snap-type: x mandatory;
  }

  /* WebKit Browsers (Chrome, Edge, Safari) */
  .arrivals-products::-webkit-scrollbar {
    height: 8px; /* Makes scrollbar bigger */
    background: black; /* Track background */
  }

  .arrivals-products::-webkit-scrollbar-thumb {
    background: white; /* White scrollbar */
    border-radius: 10px;
  }

  .arrivals-products::-webkit-scrollbar-track {
    background: black; /* Ensures track is visible */
  }

  .arrivals-card img {
   /* width: 100%;
    height: 60%;
    object-fit: cover;
    transition: opacity 0.3s ease;*/
    width: 254px; /*176 100%*/
    height: 356px; /* 247 60%*/
    object-fit: cover;
    border-radius: 0px;
  }

  
  .arrivals-card:hover img {
    opacity: 0.8;
  }

  .arrivals-card p {
    margin: 8px 0;
    font-size: 19px;
    display: -webkit-box;
    -webkit-line-clamp: 1; /* Limits text to 1 line */
    -webkit-box-orient: vertical;
    
    overflow: hidden;
    text-overflow: ellipsis; /* Cuts off text with "..." if too long */
    white-space: normal;
    max-width: 100%; /* Prevents overflow */
    text-align: center;
    font-weight: bold;
    text-transform: none;
  }

  .arrivals-card a {
    text-decoration: none;
    color: white;
  }

  .front-all-arrivals-card {
    position: relative;
    width: 254px; 
    height: 356px; 
    border: 0px solid #B59F63;
    border-radius: 0px;
    text-align: left;
    background: url('https://plus.unsplash.com/premium_photo-1694864661950-288ec8a06e5c?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') center/cover no-repeat; /* Palitan ng image URL mo */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 35px;
    font-weight: bold;
    text-decoration: none;
    flex-shrink: 0;
    padding: 20px;
    overflow: hidden;
    color: white; /* Ensure text is white */
    transition: background 0.3s ease;
   
  }

  .front-all-arrivals-card:hover {
    color: white;
  }

  .view-all-arrivals-card {
    position: relative;
    width: 254px; 
    height: 356px; 
    border: 0px solid #B59F63;
    border-radius: 0px;
    text-align: left;
    background: url('https://plus.unsplash.com/premium_photo-1683144245642-1406f0a42445?q=80&w=1907&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') center/cover no-repeat; /* Palitan ng image URL mo */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 35px;
    font-weight: bold;
    text-decoration: none;
    flex-shrink: 0;
    padding: 10px;
    overflow: hidden;
    color: white; /* Ensure text is white */
  }

   .view-all-arrivals-card:hover::after {
      background: rgba(255, 255, 255, 0.8); /* White transparent overlay */
      transition: background 0.3s ease;
  }

  /*MORE BUTTON*/
  .more-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.20);
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 18px;
    cursor: pointer;
    z-index: 10;
  }

  .more-right {
    right: 10px;
    font-size: 20px;
  }

  .more-left {
    left: 10px;
    display: none;
    font-size: 20px;
  }

  .material-icons {
    font-size: 80px; /* Adjust size */
    vertical-align: middle;
    color: #fff; /* Change to match your theme */
  }

  
  
{% endstylesheet %}

